{
  "name": "discord-chunker",
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build:web": "tsx web/build.ts",
    "build": "pnpm build:web",
    "dev": "concurrently -n web,worker -c blue,green \"tsx web/build.ts --watch\" \"wrangler dev\"",
    "deploy": "pnpm build:web && wrangler deploy",
    "lint": "biome check src test web",
    "lint:fix": "biome check --write",
    "format": "biome format --write",
    "typecheck": "tsc --noEmit && tsc --project web/tsconfig.json --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/integration",
    "test:e2e": "vitest run --dir test/e2e --passWithNoTests",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@cloudflare/vitest-pool-workers": "^0.12.11",
    "@cloudflare/workers-types": "^4.20260210.0",
    "concurrently": "^9.2.1",
    "discord-markdown": "2.5.1",
    "esbuild": "^0.27.3",
    "lefthook": "^2.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "~3.2.4",
    "wrangler": "^4.63.0"
  }
}

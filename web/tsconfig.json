{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": [
    "./**/*.ts",
    "../src/chunker.ts",
    "../src/config.ts",
    "../src/types.ts",
    "../test/web-*.ts"
  ],
  "exclude": ["build.ts"]
}
